<?xml version="1.0"?>  
<ruleset name="DTI-PHPCS">  
    <description>PHP Coding Standard adotado pelo DTI</description>  

    <rule ref="PSR2"/>
    <exclude name="Generic.Files.LineLength"/>

    <file>.</file>

    <exclude-pattern>*/storage/*</exclude-pattern>
    <exclude-pattern>*/database/migrations/*</exclude-pattern>
    <exclude-pattern>*/Database/Migrations/*</exclude-pattern>
    <exclude-pattern>*/vendor/*</exclude-pattern>
    <exclude-pattern>*/node_modules/*</exclude-pattern>

    <arg name="report-gitblame" value="linting/gitblame.txt"/>
    <arg name="report-code" value="linting/sourcecode.txt"/>
    <arg name="report-full" value="linting/fullreport.txt"/>

    <arg name="extensions" value="php"/>
    <arg name="report" value="summary"/>
    <arg name="colors"/>
    <arg value="sp"/>

    <ini name="memory_limit" value="-1"/>

</ruleset>